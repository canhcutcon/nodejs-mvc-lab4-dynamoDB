<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Application</title>
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="text-center">Danh sách môn học</h2>

      <form action="/save" method="post" class="mb-4">
        <input
          type="text"
          name="id"
          class="form-control mb-2"
          placeholder="Nhập ID..."
          required
        />
        <input
          type="text"
          name="name"
          class="form-control mb-2"
          placeholder="Nhập tên môn học..."
          required
        />
        <input
          type="text"
          name="course_type"
          class="form-control mb-2"
          placeholder="Nhập loại môn học..."
          required
        />
        <input
          type="text"
          name="semester"
          class="form-control mb-2"
          placeholder="Nhập học kỳ..."
          required
        />
        <input
          type="text"
          name="department"
          class="form-control mb-2"
          placeholder="Nhập khoa..."
          required
        />
        <button type="submit" class="btn btn-primary">Thêm môn học</button>
      </form>

      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>STT</th>
            <th>Tên Môn Học</th>
            <th>Loại</th>
            <th>Học Kỳ</th>
            <th>Khoa</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.tenMonHoc %></td>
            <td><%= item.loai %></td>
            <td><%= item.hocKy %></td>
            <td><%= item.khoa %></td>
            <form action="/delete/<%= item.id %>" method="post" class="mt-1">
              <td>
                <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
              </td>
            </form>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
